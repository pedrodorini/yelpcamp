<% include ../partials/header %>
<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to YelpCamp!</h1>
			<p>View or hand-picked campgrounds</p>
			<p>
				<a class="btn btn-primary btn-large" href="/campgrounds/new">Add new campground</a>
			</p>
		</div>
	</header>
	<div class="row text-center">
		<div class="col-lg-12">
			<h3>Our most popular campgrounds</h3>
		</div>
	</div>
	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<% for (let campground of campgrounds) { %>
			<div class="col-md-3 col-sm-6">
				<div class="thumbnail">
					<img style="width: 100%; height: 200px;" src="<%= campground.image %>">
					<div class="caption">
						<h4><%= campground.name %></li></h4>
					</div>
					<p><a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More info</a></p>
				</div>
			</div>
		<% } %>
	</div>
</div>
<% include ../partials/footer %>